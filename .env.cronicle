# Cronicle钉钉提醒系统环境配置

# MongoDB配置 - 使用独立的cronicle数据库
MONGODB_URI=mongodb://cronicle:cronicle123456@localhost:27018/cronicle?authSource=admin

# JWT密钥（请修改为您自己的密钥）
JWT_SECRET=cronicle-jwt-secret-2024
JWT_REFRESH_SECRET=cronicle-refresh-secret-2024

# 服务端口
PORT=5001

# 环境
NODE_ENV=development

# 日志级别
LOG_LEVEL=info

# 文件上传目录
UPLOAD_DIR=./uploads

# 最大文件大小（MB）
MAX_FILE_SIZE=10

# 钉钉重试配置
MAX_RETRY_COUNT=3
RETRY_INTERVAL=60